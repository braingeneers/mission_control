# Global auth settings
set $auth_redirect 0;
set $original_port $server_port;

# If using standard HTTPS port, don't include it in the redirect
if ($server_port = 443) {
    set $original_port "";
}

set $original_url "https://$host";
if ($original_port != "") {
    set $original_url "$original_url:$original_port";
}
set $original_url "$original_url$request_uri";

if ($host != auth.braingeneers.gi.ucsc.edu) {
    set $auth_redirect 1;
}

if ($cookie_oauth2_proxy = "") {
    set $auth_redirect 1;
}

if ($auth_redirect = 1) {
    # Include port 8443 explicitly in the state parameter
    return 302 $scheme://auth.braingeneers.gi.ucsc.edu:8443/oauth2/start?rd=https://whoami.braingeneers.gi.ucsc.edu:8443$request_uri;
}
