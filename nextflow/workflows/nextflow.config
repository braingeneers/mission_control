process {
    executor = 'k8s'
}

k8s {
    namespace = 'braingeneers'
    computeResourceType = 'Job'
}

aws {
  client {
    endpoint = 's3-west.nrp-nautilus.io'
    s3PathStyleAccess = true
    protocol = 'https'
  }
}

wave {
    enabled = true
}

fusion {
    enabled = true
    exportAwsAccessKeys = true
}

workDir = 's3://braingeneersdev/nextflow/'


